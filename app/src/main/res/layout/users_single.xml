<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_single_resim"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/user_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_single_resim"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/user_single_resim"
        android:layout_toRightOf="@+id/user_single_resim"
        android:text="isim"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/user_single_durum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_single_resim"
        android:layout_alignLeft="@+id/user_single_name"
        android:layout_alignStart="@+id/user_single_name"
        android:layout_marginBottom="12dp"
        android:text="Kullanici Durum" />

    <ImageView
        android:id="@+id/user_single_online"
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/user_single_name"
        android:layout_marginEnd="17dp"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/presence_online" />
</RelativeLayout>