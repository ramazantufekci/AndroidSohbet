<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mesaj_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mesaj_profile_layout"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/default_avatar" />



    <TextView
        android:id="@+id/name_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/mesaj_profile_layout"
        android:text="Isim"
        android:textSize="15sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/mesaj_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_below="@id/name_text_layout"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/mesaj_profile_layout"
        android:elevation="0dp"
        android:padding="0dp"
        android:text="Mesaj"
        android:textColor="#444444"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/time_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/name_text_layout"
        android:text="00:00"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/mesaj_resim_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/mesaj_text_layout"
        android:layout_below="@+id/mesaj_text_layout"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/mesaj_profile_layout"
        android:padding="0dp"
        android:scaleType="centerCrop"
        />
</RelativeLayout>